{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "strict": false,
    "outDir": "dist",
    "strictNullChecks": false,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/tests/*"
  ]
}